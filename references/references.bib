	journal = {Protein \& Peptide Letters},
	author = {Kumar, Amit and Mishra, Subodh and Khan, Eshan},
	month = mar,
	year = {2017},
	pages = {331--339},
	file = {Kumar et al. - 2017 - Emerging Methods for Structural Analysis of Protei.pdf:/Users/chetanraval/Zotero/storage/K26XFGX7/Kumar et al. - 2017 - Emerging Methods for Structural Analysis of Protei.pdf:application/pdf},
