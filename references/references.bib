	pmcid = {PMC2143098},
	pages = {561--602},
	file = {Full Text PDF:/Users/chetanraval/Zotero/storage/Q7VYPYIZ/Dill et al. - 1995 - Principles of protein folding--a perspective from .pdf:application/pdf},
